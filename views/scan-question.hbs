<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="row">
      <div class=" col-md-8 col-md-offset-2 ">
        请选择试题类型：
        <select id="cource">
          <option>------</option>
          <option>填空题</option>
          <option>单选题</option>
          <option>多选题</option>
        </select>
        <section id='填空题' style='display:none'>
         <ul class="list-unstyled">
        
            <form action="/questionFill" method="post">

                <input type="text" name='question'>
              </li>

              <li>
                <input type="text" name='answer'>
                <input type="submit" value='提交' class="btn btn-info">
              </li>
            </form>
          </ul>

        </section>
        <section id='单选题' style='display:none'>
          <ul class="list-unstyled">

          <ul class="list-unstyled">
            <form action="/insertSingle" method="post">

            <li>
              <input type="text" value="" name="question">
            </li>

            <li>
              <input type="text" value='A.' name="option0">&nbsp;&nbsp;&nbsp;
              <input type="text" value='B.' name="option1">&nbsp;&nbsp;&nbsp;
              <input type="text" value='C.' name="option2">&nbsp;&nbsp;&nbsp;
              <input type="text" value='D.' name="option3">
            </li>

            <li>
              <input type="radio" name='singleChoice1' value='A'>A&nbsp;&nbsp;&nbsp;
              <input type="radio" name='singleChoice1' value='B'>B&nbsp;&nbsp;&nbsp;
              <input type="radio" name='singleChoice1' value='C'>C&nbsp;&nbsp;&nbsp;
              <input type="radio" name='singleChoice1' value='D'>D
            </li>
            <li>  <input type="submit" value='提交' class="btn btn-info"></li>
            </form>
          </ul>
        </section>

        <section id='多选题' style='display:none'>

          <ul class="list-unstyled">
            <form action="/insertMultiple" method="post">

            <li>
              <input type="text" value="" name="question">
            </li>

            <li>
              <input type="text" value='A.' name='option0'>&nbsp;&nbsp;&nbsp;
              <input type="text" value='B.' name='option1'>&nbsp;&nbsp;&nbsp;
              <input type="text" value='C.' name='option2'>&nbsp;&nbsp;&nbsp;
              <input type="text" value='D.' name='option3'>
            </li>

            <li>
              <input type="checkbox" name='multipleChoice1' value='A' >A&nbsp;&nbsp;&nbsp;
              <input type="checkbox" name='multipleChoice1' value='B' >B&nbsp;&nbsp;&nbsp;
              <input type="checkbox" name='multipleChoice1' value='C' >C&nbsp;&nbsp;&nbsp;
              <input type="checkbox" name='multipleChoice1' value='D' >D
            </li>
            <li>  <input type="submit" value='提交' class="btn btn-info"></li>
            </form>
          </ul>
        </section>
      </div>
    </div>
  </body>
</html>
